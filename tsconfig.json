{
  "compilerOptions": {
    "outDir": "./docs/assets/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/custom-types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}